---
import Layout from "../layouts/Layout.astro"
import ProductsComponent from "../components/react/Products/productsComponent"
import "../../assets/scss/products.scss"
---

<Layout title="Products">
    <main>
        <div class="products-container">
            <div class="products-title">
                <h1>Products List</h1>
                <div class="bg-red-500 text-black p-2">
                    <div class="text-lg md:text-xl font-bold">
                        Please Call / Whatsapp{" "}
                        <span class="text-white">[91 9020562422]</span> for any orders or queries.
                      </div>
          
                      <div class="text-lg md:text-xl font-bold mb-2">
                        <span class="text-white">Next day delivery</span> at most places inside <span class="text-white">Kerala</span>
                      </div>
                </div>
                

            </div>
            <ProductsComponent  client:load/>
        </div>
        
    </main>
</Layout>
